<h2>Wallet Items</h2>
<hr class="border-primary">
{{#if this.model.length}}
  <div class="grid grid-gutter-sm grid-cols-2 grid-cols-md-3 grid-cols-lg-4 w-100 mb-auto">
    {{#each this.model as |asset|}}
      <div class="card">
        <div class="card-body p-2 p-md-3 d-flex flex-column">
          <ItemImage class="card-img-top w-60 h-60 m-auto" @item={{asset}} />
          <h6 class="card-title my-1 letter-spacing-md">{{if asset.name asset.name "unknown"}}</h6>
          <p class="card-text text-muted text-xs mb-0 text-truncate">
            {{asset.asset_contract.name}} {{if asset.network (concat "(" @asset.network ")") }}
          </p>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="m-auto text-center">
    <img src="/assets/svg/icons/items-empty-state.svg" alt="Empty" />
    <p class="mt-3 mb-2">0 items found</p>
    <p class="text-muted mt-0">Your items may take some time to be reflected on the blockchain. Check back soon.</p>
  </div>
{{/if}}