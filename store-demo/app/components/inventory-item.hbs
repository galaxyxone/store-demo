<div class="card border-0 rounded-lg">
  <span class="badge badge-pill badge-light position-absolute m-3">${{this.price}}</span>
  {{!-- template-lint-disable no-inline-styles --}}
  <img class="card-img-top object-fit-scale-down object-position-center mt-3 card-cta" src={{@item.imageUrl}} alt={{@item.name}} style="max-height: 200px;">
  {{!-- template-lint-enable no-inline-styles --}}
  <div class="card-body d-flex flex-column">
    {{#if this.error}}
      <p class="text-danger px-3">{{this.error.message}}</p>
    {{/if}}
    <p class="card-title lead">{{@item.name}}</p>
    <p class="card-text small mb-4">{{@item.description}}</p>
    <button type="button" class="btn btn-primary btn-lg bg-gradient-dark w-100 mt-auto" {{on "click" this.buy}}>
      Buy Now
    </button>
  </div>
</div>