{{#if @isVisible}}
  <div class="modal-backdrop fade show"></div>
  <div class="modal-open" >
    <div {{on "click" this.allClicks}} class="modal fade show d-block" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="false" data-test-modal-backdrop>
      {{!-- template-lint-disable no-invalid-interactive --}}
      <div ...attributes class="modal-dialog modal-dialog-centered" role="document" {{on "click" this.innerClick}}>
      {{!-- template-lint-enable no-invalid-interactive --}}
        <div class="modal-content">
          <div class="modal-header border-0 pb-0">
            <h4 class="modal-title w-100 text-center text-dark letter-spacing-sm" id="modal-title">{{@title}}</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" {{on "click" this.onClose}} data-test-modal-close>
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            {{yield}}
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}